<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/card_view"
            app:cardUseCompatPadding="true"
            app:cardCornerRadius="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:cardElevation="7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/service_constraint"
                android:layout_margin="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/name"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:text="djkhkjhd"
                    android:textSize="14sp"
                    android:textColor="#737373"
                    android:fontFamily="@font/poppins_medium"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/types"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="#000000"
                    android:text=" Types"
                    android:textSize="12sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/tv_total_prices"
                    app:layout_constraintEnd_toStartOf="@id/arrow_up" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_total_prices"
                    android:fontFamily="@font/poppins_medium"
                    android:drawableStart="@drawable/rupee"
                    android:textColor="@color/blue_light_popular"
                    android:text=" Types"
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@id/types"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/arrow_up" />

                <ImageView
                    android:id="@+id/arrow_up"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:src="@drawable/ic_right"
                    android:padding="10dp"
                    android:scaleType="fitXY"
                    app:layout_constraintTop_toTopOf="@id/service_constraint"
                    app:layout_constraintBottom_toBottomOf="@id/service_constraint" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

</layout>