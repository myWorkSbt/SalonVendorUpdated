<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E8FB5B1"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="83dp"
        android:layout_height="83dp"
        android:src="@drawable/wifi_off"
        android:layout_marginTop="17dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="73dp"
        app:layout_constraintBottom_toTopOf="@id/check_text_lays"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/internet_imgs"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/check_text_lays"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Check Your Connection "
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/internet_imgs"
        app:layout_constraintBottom_toTopOf="@id/check_text_lays"
        android:layout_marginBottom="30dp"
        android:text="No Internet!"
        android:textAlignment="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_apply"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="17dp"
        android:background="@drawable/corner_cutted_box"
        android:backgroundTint="#87CFD6"
        android:paddingHorizontal="13dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:text="Retry"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/check_text_lays"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>